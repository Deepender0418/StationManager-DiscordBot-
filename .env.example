# ============================================================================
# DISCORD BOT CONFIGURATION
# ============================================================================

# Discord Bot Token
# Get from: https://discord.com/developers/applications
# Go to your application > Bot > Reset Token
DISCORD_TOKEN=your_discord_bot_token_here

# Discord Bot Owner ID (your Discord user ID)
# Right-click your profile > Copy User ID (requires Developer Mode enabled)
BOT_OWNER_ID=your_discord_user_id_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# MongoDB Connection URI
# Get from: MongoDB Atlas > Database > Connect > Connect your application
# Format: mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_URI="your_mongodb_connection_string_here"

# Database Name (optional, defaults to 'discord_bot')
DATABASE_NAME=discord_bot

# ============================================================================
# AI CHAT CONFIGURATION
# ============================================================================

# GROQ API Key for AI chat functionality
# Get from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Channel ID where AI can respond
# Right-click channel > Copy Channel ID
ALLOWED_CHANNEL_ID=your_channel_id_here

# ============================================================================
# WEB DASHBOARD CONFIGURATION
# ============================================================================

# Admin password for web dashboard access
# IMPORTANT: Use a strong, unique password!
ADMIN_SECRET=your_strong_admin_password_here

# Web server host (default: 0.0.0.0 for all interfaces, use 127.0.0.1 for localhost only)
WEB_HOST=127.0.0.1

# Web server port (default: 8080)
WEB_PORT=8080

# Session lifetime in minutes (default: 1440 = 24 hours)
WEB_SESSION_MINUTES=1440

# ============================================================================
# BOT SETTINGS
# ============================================================================

# Command prefix (default: !)
COMMAND_PREFIX=!
